@{
    ViewBag.Title = "Inicio";
}

<main class="bg-light min-vh-100 d-flex flex-column">
    <!-- Hero Section -->
    <section class="text-center bg-gradient" style="background: linear-gradient(135deg, #6a11cb, #2575fc); color: white; padding: 60px 20px;">
        <div class="container">
            <h1 class="display-5 fw-bold mb-2" style="color: black;">Sticky Notes</h1>
            <p class="lead mb-4 fw-semibold" style="color: black;">Organiza tus ideas, tareas y recordatorios de forma simple y eficaz.</p>

            @Html.ActionLink("¡Empezar a crear notas!", "Create", "Notas", null, new { @class = "btn btn-light btn-lg rounded-3 shadow-sm fw-semibold" })
        </div>
    </section>

    <!-- Features Section -->
    <section class="container py-4">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-4 text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-journal-plus display-5 text-primary mb-3"></i>
                        <h4 class="fw-bold mb-3">Crear Notas</h4>
                        <p class="text-muted mb-4">
                            Crea notas con título, contenido y color personalizado.
                        </p>
                        @Html.ActionLink("Crear Nota", "Create", "Notas", null, new { @class = "btn btn-outline-primary rounded-3" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-4 text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-pin-angle display-5 text-success mb-3"></i>
                        <h4 class="fw-bold mb-3">Organizar</h4>
                        <p class="text-muted mb-4">
                            Fija, marca como completadas y gestiona tus prioridades.
                        </p>
                        @Html.ActionLink("Ver Notas", "Index", "Notas", null, new { @class = "btn btn-outline-success rounded-3" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-4 text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-bell display-5 text-warning mb-3"></i>
                        <h4 class="fw-bold mb-3">Recordatorios</h4>
                        <p class="text-muted mb-4">
                            Configura alertas para no olvidar tus tareas importantes.
                        </p>
                        @Html.ActionLink("Ver Recordatorios", "Reminders", "Notas", null, new { @class = "btn btn-outline-warning rounded-3" })
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
}
