@model IEnumerable<StickyNotes.Data.Notas>

@{
    ViewBag.Title = "Notas Completadas";
}

<h2>Notas Completadas</h2>

<p>
    @Html.ActionLink("Volver a Mis Notas", "Index", "Notas", null, new { @class = "btn btn-secondary" })
</p>

@using (Html.BeginForm("Completed", "Notas", FormMethod.Get))
{
    <div class="search-container" style="margin-bottom: 20px;">
        <div style="display: flex; gap: 10px; align-items: center;">
            <input type="text" 
                   name="search" 
                   value="@ViewBag.SearchTerm" 
                   placeholder="Buscar por titulo, contenido o categoria..." 
                   class="form-control" 
                   style="flex: 1; max-width: 400px; padding: 8px; border-radius: 6px; border: 1px solid #ccc;" />
            <button type="submit" class="btn btn-primary" style="padding: 8px 20px;">Buscar</button>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                @Html.ActionLink("Limpiar", "Completed", "Notas", null, new { @class = "btn btn-default", style = "padding: 8px 20px;" })
            }
        </div>
    </div>
}

<style>
    .notes-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .note-card {
        width: 250px;
        min-height: 160px;
        padding: 15px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        word-wrap: break-word;
        transition: transform 0.25s ease;
        border: 2px solid #28a745;
    }

        .note-card:hover {
            transform: translateY(-5px);
        }

    .note-title {
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 8px;
    }

    .note-content {
        flex-grow: 1;
        margin-bottom: 10px;
        font-size: 0.95rem;
    }

    .note-footer {
        font-size: 0.8rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 6px;
    }

    .note-meta {
        display: flex;
        flex-direction: column;
        font-weight: 600;
    }

    .note-date {
        font-size: 0.75rem;
        color: #444;
    }

    .note-actions {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 90px;
        height: 32px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        text-decoration: none;
        color: #fff;
        border: none;
        transition: transform 0.2s ease-in-out;
        cursor: pointer;
    }

        .btn-action:hover {
            transform: translateY(-2px);
        }

    .btn-edit {
        background-color: #007bff;
    }

    .btn-delete {
        background-color: #dc3545;
    }

    .btn-details {
        background-color: #17a2b8;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: transform 0.2s ease-in-out;
        display: inline-block;
        margin-bottom: 15px;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    .completed-badge {
        display: inline-block;
        background-color: #28a745;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-left: 8px;
    }
</style>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No hay notas completadas</h4>
        <p>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <text>No se encontraron notas completadas con el termino de busqueda "@ViewBag.SearchTerm".</text>
            }
            else
            {
                <text>No tienes ninguna nota completada. @Html.ActionLink("Completa tu primera nota!", "Index")</text>
            }
        </p>
    </div>
}
else
{
    <div class="notes-container">
        @foreach (var item in Model)
        {
            <div class="note-card" style="background-color:@item.color">
                <div>
                    <div class="note-title">
                        @item.titulo
                        <span class="completed-badge">Completada</span>
                    </div>
                    <div class="note-content">@item.contenido</div>
                </div>

                <div class="note-footer">
                    <div class="note-meta">
                        <span>
                            <strong>
                                @(item.Categorias != null ? item.Categorias.nombre : "Sin categoria")
                            </strong>
                        </span>

                        @if (item.fechaCreacion.HasValue)
                        {
                            <span class="note-date">
                                @item.fechaCreacion.Value.ToString("d MMM").ToLower()
                            </span>
                        }
                    </div>

                    <div class="note-actions">
                        <a href="#" class="btn-action btn-delete" data-id="@item.idNota">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section scripts {
    <script>
        // Script para eliminar notas completadas - elimina permanentemente de la BD
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".btn-delete").forEach(btn => {
                btn.addEventListener("click", (e) => {
                    e.preventDefault();
                    const id = btn.getAttribute("data-id");
                    eliminarNotaCompletada(id);
                });
            });
        });

        function eliminarNotaCompletada(id) {
            if (confirm("¿Seguro que deseas eliminar esta nota permanentemente? Esta acción no se puede deshacer.")) {
                fetch(`/Notas/DeleteConfirmed/${id}`, {
                    method: "POST"
                })
                    .then(response => {
                        if (response.ok || response.redirected) {
                            // Remover la tarjeta de la vista inmediatamente
                            const card = document.querySelector(`.btn-delete[data-id="${id}"]`).closest(".note-card");
                            if (card) {
                                card.remove();
                            }
                            
                            // Si no quedan más notas, recargar para mostrar el mensaje
                            const container = document.querySelector(".notes-container");
                            if (container && container.children.length === 0) {
                                location.reload();
                            }
                        } else {
                            alert("Error al eliminar la nota.");
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        alert("Error al eliminar la nota.");
                    });
            }
        }
    </script>
}

