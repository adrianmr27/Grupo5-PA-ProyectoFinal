@model IEnumerable<StickyNotes.Data.Notas>

@{
    ViewBag.Title = "Notas";
}

<h2>Mis Notas</h2>

<p>
    @Html.ActionLink("➕ Crear Nueva Nota", "Create", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm("Index", "Notas", FormMethod.Get))
{
    <div class="search-container" style="margin-bottom: 20px;">
        <div style="display: flex; gap: 10px; align-items: center;">
            <input type="text" 
                   name="search" 
                   value="@ViewBag.SearchTerm" 
                   placeholder="Buscar por titulo, contenido o categoria..." 
                   class="form-control" 
                   style="flex: 1; max-width: 400px; padding: 8px; border-radius: 6px; border: 1px solid #ccc;" />
            <button type="submit" class="btn btn-primary" style="padding: 8px 20px;">Buscar</button>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                @Html.ActionLink("Limpiar", "Index", "Notas", null, new { @class = "btn btn-default", style = "padding: 8px 20px;" })
            }
        </div>
    </div>
}

<style>
    .notes-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .note-card {
        width: 280px;
        min-height: 240px; /* 🔥 MÁS ALTA */
        padding: 16px;
        border-radius: 14px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        word-wrap: break-word;
        transition: transform 0.25s ease;
    }

        .note-card:hover {
            transform: translateY(-5px);
        }

    .note-title {
        font-weight: 700;
        font-size: 1.2rem;
        margin-bottom: 8px;
    }

    .note-content {
        flex-grow: 1;
        margin-bottom: 10px;
        font-size: 0.95rem;
    }

    .note-footer {
        margin-top: auto;
        font-size: 0.8rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 6px;
    }

    .note-meta {
        display: flex;
        flex-direction: column;
        font-weight: 600;
    }

    .note-date {
        font-size: 0.75rem;
        color: #444;
    }

    .note-actions {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 85px;
        height: 32px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        text-decoration: none;
        color: #fff;
        border: none;
        transition: transform 0.2s ease-in-out;
        cursor: pointer;
    }

        .btn-action:hover {
            transform: translateY(-2px);
        }

    .btn-edit {
        background-color: #007bff;
    }

    .btn-delete {
        background-color: #dc3545;
    }

    .btn-pin {
        background-color: #28a745;
    }

    .btn-complete {
        background-color: #17a2b8;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 8px 14px;
        border-radius: 6px;
        color: white;
        font-weight: 600;
        text-decoration: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
        }

    .search-container {
        margin-bottom: 20px;
    }

    .btn-default {
        background-color: #6c757d;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: transform 0.2s ease-in-out;
        display: inline-block;
    }

        .btn-default:hover {
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }
</style>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No hay notas</h4>
        <p>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
            {
                <text>No se encontraron notas con el termino de busqueda "@ViewBag.SearchTerm".</text>
            }
            else
            {
                <text>No tienes ninguna nota. @Html.ActionLink("Crea tu primera nota!", "Create")</text>
            }
        </p>
    </div>
}
else
{
    <div class="notes-container">
        @foreach (var item in Model)
    {
        <div class="note-card" style="background-color:@item.color">
            <div>
                <div class="note-title">@item.titulo</div>
                <div class="note-content">@item.contenido</div>
            </div>

            <div class="note-footer">
                <div class="note-meta">
                    <span>
                        <strong>
                            @(item.Categorias != null ? item.Categorias.nombre : "Sin categoría")
                        </strong>
                    </span>

                    @if (item.fechaCreacion.HasValue)
                    {
                        <span class="note-date">
                            @item.fechaCreacion.Value.ToString("d MMM").ToLower()
                        </span>
                    }
                </div>

                <div class="note-actions">
                    @Html.ActionLink("✏️ Editar", "Edit", new { id = item.idNota }, new { @class = "btn-action btn-edit" })
                    <a href="#" class="btn-action btn-delete" data-id="@item.idNota">🗑️ Eliminar</a>

                    <button class="btn-action btn-pin pin-btn" data-id="@item.idNota">
                        📌 Fijar
                    </button>
                    
                    @{
                        // Mostrar botón solo si la nota no está completada (idEstado != 2)
                        bool mostrarBoton = !item.idEstado.HasValue || item.idEstado.Value != 2;
                    }
                    @if (mostrarBoton)
                    {
                        <button class="btn-action btn-complete complete-btn" data-id="@item.idNota" type="button">
                            Completada
                        </button>
                    }
                </div>
            </div>
        </div>
    }
    </div>
}

@Html.AntiForgeryToken()

@section scripts {
    <script src="~/Scripts/ScriptDelete.js"></script>
}

<script>
    // Botón Fijar (funciona correctamente)
    document.querySelectorAll(".pin-btn").forEach(btn => {
        btn.addEventListener("click", function () {
            const id = this.dataset.id;

            fetch('/Notas/TogglePin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: 'id=' + id
            }).then(() => location.reload());
        });
    });

    // Botón Completada - usar exactamente el mismo patrón que TogglePin
    document.querySelectorAll(".complete-btn").forEach(btn => {
        btn.addEventListener("click", function () {
            const id = this.dataset.id;

            fetch('/Notas/ToggleComplete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: 'id=' + id
            }).then(() => location.reload());
        });
    });
</script>

