@using StickyNotes.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="width: 28rem;">
        <div class="card-body p-5">
            <h3 class="text-center mb-4 text-dark fw-bold">
                <i class="bi bi-sticky"></i> Sticky Notes
            </h3>
            <h5 class="text-center text-secondary mb-4">Inicia sesión en tu cuenta</h5>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-envelope me-1"></i> Correo electrónico
                    </label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg rounded-3", placeholder = "ejemplo@correo.com" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-lock me-1"></i> Contraseña
                    </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg rounded-3", placeholder = "••••••••" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <div class="form-check mb-3">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                    <label class="form-check-label">Recordarme</label>
                </div>

                <button type="submit" class="btn btn-dark btn-lg w-100 rounded-3 shadow-sm mb-3">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                </button>

                <div class="text-center">
                    <p class="mb-1">
                        ¿No tienes cuenta?
                        @Html.ActionLink("Regístrate aquí", "Register", null, new { @class = "fw-semibold text-decoration-none" })
                    </p>
                    <p class="small text-muted">
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "ForgotPassword", null, new { @class = "text-secondary text-decoration-none" })
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
}
