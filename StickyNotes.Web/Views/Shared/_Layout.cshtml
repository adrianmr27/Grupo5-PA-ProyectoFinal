@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Sticky Notes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            font-family: 'Segoe UI', Roboto, sans-serif;
            background-color: #f7f9fc;
            color: #333;
            margin: 0;
        }

        .navbar {
            background: linear-gradient(90deg, #2c3e50, #4ca1af);
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            padding: 0.8rem 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: #fff !important;
            text-shadow: 0 1px 2px rgba(0,0,0,0.2);
        }

        .nav-link {
            color: #e2e2e2 !important;
            font-weight: 500;
            margin: 0 0.3rem;
            transition: all 0.2s ease-in-out;
        }

            .nav-link:hover {
                color: #fff !important;
                transform: translateY(-1px);
            }

        .body-content {
            padding: 40px 15px;
            min-height: calc(100vh - 120px);
        }

        footer {
            text-align: center;
            padding: 20px;
            background-color: #2c3e50;
            color: #fff;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #007bff, #00b4d8);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 8px 16px;
            color: #fff;
            transition: all 0.2s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                background: linear-gradient(135deg, #0096c7, #0077b6);
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            @Html.ActionLink("🗒️ Sticky Notes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Mis Notas", "Index", "Notas", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Nueva Nota", "Create", "Notas", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Notas Fijadas", "Pinned", "Notas", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Completadas", "Completed", "Notas", null, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer>
        &copy; @DateTime.Now.Year — Sticky Notes App 💡
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
